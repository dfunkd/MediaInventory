<UserControl x:Class="MediaInventory.UserControls.AddRecipe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:MediaInventory.UserControls"
             xmlns:uc="clr-namespace:MediaInventory.UserControls"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="addMovie">

    <UserControl.Resources>
        <CollectionViewSource x:Key="cvsMovies" />
        <Style x:Key="NoChromeButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="Chrome" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#ADADAD"/>
                                <Setter Property="Opacity" TargetName="Chrome" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <uc:AnimatedWatermarkTextBox x:Name="txtSearchCriteria" DockPanel.Dock="Top" Margin="5" HeaderText="Search Movies..." />
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Button DockPanel.Dock="Left" Style="{DynamicResource NoChromeButton}" Click="Button_Click">
                <Border DockPanel.Dock="Left" BorderBrush="Black" BorderThickness="1" Margin="5" VerticalAlignment="Top" Visibility="{Binding Path=RecipeImage, Converter={StaticResource NullToVisibilityConverter}}">
                    <Image x:Name="imgRecipe" Height="200" />
                </Border>
            </Button>
            <Grid DockPanel.Dock="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" FontWeight="Bold" Margin="4" Text="Prep. Time (Minutes)" />
                <TextBox x:Name="txtPrepTime" Grid.Column="1" Grid.Row="0" Margin="4" Width="100" TextChanged="OnTextChanged" />
                <TextBlock Grid.Column="0" Grid.Row="1" FontWeight="Bold" Margin="4" Text="Prep. Time (Minutes)" />
                <TextBox x:Name="txtCookTime" Grid.Column="1" Grid.Row="1" Margin="4" Width="100" TextChanged="OnTextChanged" />
                <TextBlock Grid.Column="0" Grid.Row="2" FontWeight="Bold" Margin="4" Text="Prep. Time" />
                <TextBlock x:Name="tbTotalTime" Grid.Column="1" Grid.Row="2" Margin="4" Width="100" />
            </Grid>
        </DockPanel>
        <Grid DockPanel.Dock="Top" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" FontWeight="Bold" Margin="4" Text="Ingredients" />
            <!--Need to create datagrid for the Recipe Ingredients-->
            <!--Need to create ComboBoxes to add ingredients-->
            <TextBlock Grid.Column="1" Grid.Row="0" FontWeight="Bold" Margin="4" Text="Directions" />
            <TextBox x:Name="txtDirections" Grid.Column="1" Grid.Row="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextChanged="OnTextChanged" TextWrapping="Wrap" />
        </Grid>
    </DockPanel>
</UserControl>